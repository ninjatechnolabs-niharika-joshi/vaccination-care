pipeline {
    agent any
    
    stages {

        stage('Notify Google Chat for build start') {
            steps {
                script {
                    def googleChatWebhook = 'https://chat.googleapis.com/v1/spaces/AAAAezVsu8k/messages?key=AIzaSyDdI0hCZtE6vySjMm-WEfRq3CPzqKqqsHI&token=yqTBR-sDlkmHyvlgHU21UsJeyFfZFNCUqc_6GT1zzH0'
                    def message = 'Build Started for vaxicare-backend-main-branch\nJob URL: ' + env.BUILD_URL

                    def response = httpRequest(
                        url: googleChatWebhook,
                        httpMode: 'POST',
                        contentType: 'APPLICATION_JSON',
                        requestBody: "{\"text\":\"${message}\"}"
                    )

                    echo "Google Chat Notification Response: ${response}"
                }
            }
        }

        stage('Checkout') {
            steps {
                // Checkout your Node.js project from your VCS (e.g., Git) using credentialsId 
                checkout([$class: 'GitSCM', 
                          branches: [[name: '*/main']],
                  userRemoteConfigs: [[credentialsId: ' f2341fa0-93f6-4fbc-b141-50106416346f', url: 'https://github.com/NinjatechDevOps/vaxicare-backend-nodejs.git']]])
            }
        }

        stage('Deploy to Server') {
            steps {
                script{
                    sh """
                        sudo -u vaxicarebackend bash -c '
                        cd /home/vaxicarebackend/public_html/vaxicare-backend-nodejs
                        git status
                        git stash
                        git pull
                        npm install --legacy-peer-deps
                        npx prisma generate
                        npm run build
                        pm2 reload all
                        '
                    """
                    
                }
            }
        }
    }

    post {
        always {
            script {
                def googleChatWebhook = 'https://chat.googleapis.com/v1/spaces/AAAAezVsu8k/messages?key=AIzaSyDdI0hCZtE6vySjMm-WEfRq3CPzqKqqsHI&token=yqTBR-sDlkmHyvlgHU21UsJeyFfZFNCUqc_6GT1zzH0'
                def buildStatus = currentBuild.result ?: 'UNKNOWN'
                def message = "Build ${buildStatus} for vaxicare-backend-main-branch\nJob URL: ${env.BUILD_URL}"

                def response = httpRequest(
                    url: googleChatWebhook,
                    httpMode: 'POST',
                    contentType: 'APPLICATION_JSON',
                    requestBody: "{\"text\":\"${message}\"}"
                )

                echo "Google Chat Notification Response: ${response}"
            }
        }
    }
}
