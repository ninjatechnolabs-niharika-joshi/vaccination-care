{
  "name": "vaxicare-app",
  "version": "1.0.0",
  "description": "Vaxicare Application with Express.js, TypeScript, Prisma & PostgreSQL",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "bash build.sh",
    "postinstall": "prisma generate || true",
    "vercel-build": "prisma generate || true",
    "build:strict": "tsc",
    "build:show-errors": "tsc || true",
    "start": "node dist/server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:restart": "pm2 restart vaxicare-backend-nodejs",
    "pm2:stop": "pm2 stop vaxicare-backend-nodejs",
    "pm2:delete": "pm2 delete vaxicare-backend-nodejs",
    "pm2:logs": "pm2 logs vaxicare-backend-nodejs",
    "pm2:status": "pm2 status",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "db:reset": "prisma migrate reset",
    "migrate": "tsx database/migrations/run-migration.ts",
    "seed:admin": "tsx prisma/seeds/seed-add-admin.ts",
    "seed:vaccines": "tsx prisma/seeds/seed-vaccines.ts",
    "seed:schedules": "tsx prisma/seeds/seed-vaccine-schedules.ts",
    "seed:centers": "tsx prisma/seeds/seed-vaccination-centers.ts",
    "seed:staff": "tsx prisma/seeds/seed-medical-staff.ts",
    "seed:knowledge": "tsx prisma/seeds/seed-knowledge-base.ts",
    "seed:all": "npm run seed:admin && npm run seed:vaccines && npm run seed:schedules && npm run seed:knowledge && npm run seed:centers && npm run seed:staff",
    "flush:vaccines": "tsx prisma/seeds/flush-data.ts vaccines --confirm",
    "flush:users": "tsx prisma/seeds/flush-data.ts users --confirm",
    "flush:appointments": "tsx prisma/seeds/flush-data.ts appointments --confirm",
    "flush:knowledge": "tsx prisma/seeds/flush-data.ts knowledge --confirm",
    "flush:all": "tsx prisma/seeds/flush-data.ts all --confirm",
    "setup:fresh": "npm run prisma:push && npm run seed:all",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"prisma/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "express",
    "typescript",
    "prisma",
    "postgresql",
    "api"
  ],
  "author": "Meena Chauhan",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "@types/compression": "^1.8.1",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.5",
    "@types/nodemailer": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "prisma": "^6.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
